<!DOCTYPE html>
<html>
<head>
  <title>IohCoverMaker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="container">
	<!-- navbar  -->
	<nav class="navbar navbar-default">
		<div class="container-fluid">
		  <!-- Brand and toggle get grouped for better mobile display -->
		  <div class="navbar-header">
		  
		    <% flash.each do |name, msg| %>
  		      <%= content_tag :div, msg, id: "flash_#{name}" %>
		    <% end %>

		    <%= link_to image_tag("logo.png", width: "160", height: "120"), root_path  %>
		  </div>

		  <!-- Collect the nav links, forms, and other content for toggling -->
		  <% if current_user %>
		  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		     <ul class="nav navbar-nav navbar-right">
		     	<li class="dropdown">
		     	
		        <a href="#" class="dropdown-toggle" id="special-for-gravtar" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding: 0 0;"><%= current_user.account_name%><p id="arrowsPng"></p></a>
		        <ul class="dropdown-menu">
		          <li> <%= link_to "logout", destroy_user_session_path, method: "delete" %></li>
		          <li><a href="#">Another action</a></li>
		          <li><a href="#">Something else here</a></li>
		          <li role="separator" class="divider"></li>
		          <li><a href="#">Separated link</a></li>
		        </ul>
		      </li>	
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		       <%= image_tag gravatar_url(current_user.email, 32), alt: "", class: "avatar_icon" %>
		     </ul>
		  </div><!-- /.navbar-collapse -->
		  <% end %>	
		</div><!-- /.container-fluid -->
	</nav>
	<%= yield %>
	</div>

</body>
</html>
