<!DOCTYPE html>
<html>
<head>
  <title>IohCoverMaker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- navbar  -->
	<nav class="navbar navbar-default">
		<div class="container-fluid">
		  <!-- Brand and toggle get grouped for better mobile display -->
		  <div class="navbar-header">
		    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		      <span class="sr-only">Toggle navigation</span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		    </button>

		    <a href="./"><%= image_tag("logo.png", width: "160", height: "120") %></a>
		  </div>

		  <!-- Collect the nav links, forms, and other content for toggling -->
		  <% if current_user %>
		  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		     <ul class="nav navbar-nav navbar-right">
		     	<li class="dropdown">
		        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding: 0 0;"><%= current_user.account_name%><p id="arrowsPng"></p></a>
		        <ul class="dropdown-menu">
		          <li><%= link_to "logout", logout_path, method: "delete" %></li>
		          <li><a href="#">Another action</a></li>
		          <li><a href="#">Something else here</a></li>
		          <li role="separator" class="divider"></li>
		          <li><a href="#">Separated link</a></li>
		        </ul>
		      </li>	
		    </ul>
		  </div><!-- /.navbar-collapse -->
		  <% end %>	
		</div><!-- /.container-fluid -->
	</nav>
<%= yield %>

</body>
</html>
