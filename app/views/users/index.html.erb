<div class="row">
  <h1 style="float: left;">Listing Users</h1>
  <%= link_to 'New User', new_user_path, class: "btn btn-primary", id: "new-user-btn" %>
</div>

<table class="table ">
  <thead>
    <tr>
      <!-- <th>Avatar</th> -->
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <!-- <td></td> -->
        <td><%= image_tag gravatar_url(current_user.email, 32), alt: "", class: "avatar_icon" %> <%= user.account_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
